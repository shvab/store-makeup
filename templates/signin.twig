{% extends "base.twig" %}

{% block content %}
  <div class="form-main">
    
	<h1>Sign in</h1>

	<form action="/session" method="post">
	  <dl>
	  	<dt><label autocapitalize="off" autocorrect="off" autofocus="autofocus" for="user_email">Email address</label></dt>
	  	<dd><input autocapitalize="off" autocorrect="off" autofocus="autofocus" id="user_email" name="user[email]" size="30" type="text"></dd>
	  </dl>

	  <dl>
	  	<dt><label for="user_password">Password <a href="/password_reset">(forgot password)</a></label></dt>
	  	<dd><input id="user_password" name="user[password]" size="30" type="password"></dd>
	  </dl>

	  <button type="submit" class="btn btn-default">Sign in</button>
	</form>
  </div>
{% endblock %}
