{% extends "base.twig" %}

{% block content %}
  <div class="form-main">
    
	<h1>Forgot password</h1>

	<form action="/password_reset" method="post">
	  <dl>
	  	<dt><label for="user_email">Email address</label></dt>
	  	<dd><input autofocus="autofocus" id="user_email" name="user[email]" placeholder="Enter your email address" size="30" type="text"></dd>
	  </dl>

	  <button type="submit" class="btn btn-default">Submit</button>
	</form>

  </div>
{% endblock %}
